generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
 id  Int @id @default(autoincrement())
  name String @unique
  user User @relation(fields: [userId], references: [id])
  userId Int
  proteins Float
  fats Float
  carbohydrates Float
  calories Float
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  products Product[]
  meals Meal[]
}

